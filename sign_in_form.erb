<!-- In page view -->
<% if logged_in? %>
  <%= link_to "Logout", session_path, method: :delete %>
<% end %>

<!-- form partial -->
<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Sign in" %>
<% end %>
